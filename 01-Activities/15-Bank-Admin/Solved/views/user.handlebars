<h2>Create New Account:</h2>
<form action="/users/{{user.id}}/accounts/new" method="POST">
  Checking: <input name="type" type="radio" value="checking" />
  <br />
  Savings: <input name="type" type="radio" value="savings" />
  <br />
  <input type="submit" />
</form>

<h2>{{user.name}}</h2>
{{#each user.Accounts}}
  <p>
    <a href="/accounts/{{id}}">{{type}}</a>: ${{balance}}.00
  </p>
{{/each}}
